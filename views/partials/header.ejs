  <div class="loginMenu">
    <div class="loginDiv">
        <a href="#"><div id="magnifying-glass"></div></a>
    </div>
    <script type="text/javascript">
      function registerModal() {
        document.getElementById('registerModal').style.display = "block";
      }
      function loginModal() {
        document.getElementById('loginModal').style.display = "block";
      }
      function closeModal() {
        document.getElementById('loginModal').style.display = "none";
        document.getElementById('registerModal').style.display = "none";
      }
    </script>
    <div class="loginDiv">
      <a href="#" id="loginClick" onclick="loginModal()"><h3>sign in</h3></a>
      <div id="loginModal">
        <div class="container" id="sessionsNewEJS">
          <form action="/sessions" method="POST">
            <fieldset class="fieldset">
              <div>
                <h1 class="h1">Log In</h1>
                <label class="label" for="username">Username</label>
                <input class="input" type="text" id="username" name="username" placeholder="Username" required>
              </div>
              <div>
                <label class="password label" for="password">Password</label>
                <input class="input password" type="password" name="password" placeholder="Password" required>
              </div>
            </fieldset>
            <input type="submit" class="btn" id="logInBtn" value="Log In">
          </form>
        </div>
        <a href="#" class="closeModalBtn" onclick="closeModal()">Close</a>
      </div>
    </div>
    <div class="loginDiv">
      <a href="#" id="registerClick" onclick="registerModal()"><h3 id="startNow">start now</h3></a>
      <div id="registerModal">
        <div class="container" id="userNewEJS">
          <h1 class="h1">Registration</h1>
          <form action="/users" method="POST">
            <fieldset class="fieldset">
              <label class="label" for="username">Username</label>
              <input class="input" type="text" name="username" required/>
              <label class="password label" for="password">Password</label>
              <input class="input password" type="password" name="password" required>
            </fieldset>
            <input class="btn submitBtn" type="submit" value="Register">
          </form>
        </div>
        <a href="#" class="closeModalBtn" onclick="closeModal()">Close</a>
      </div>
    </div>
  </div>
</div>
